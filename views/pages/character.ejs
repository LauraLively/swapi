<!DOCTYPE html>
<html lang="en">
<head>
    <title>Star Wars API</title>
    <% include ../partials/head %>
</head>
<body class="container">
	<header>
	    <% include ../partials/header %>
	</header>
	<main>
	    <div class="jumbotron">
	    	 <% data.forEach(function(character) { %>
            <h1 style="font-size: xx-large"><%= character.name %></h1>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><span style="font-weight: 700">Birth Year: </span><%= character.birth_year %></li>
                <li class="list-group-item"><span style="font-weight: 700">Height: </span> <%= character.height %>cm</li>
                <li class="list-group-item"><span style="font-weight: 700">Mass: </span> <%= character.mass %>kg</li>
                <li class="list-group-item"><span style="font-weight: 700">Hair Color: </span><%= character.hair_color %></li>
                <li class="list-group-item"><span style="font-weight: 700">Eye Color: </span> <%= character.eye_color %></li>
              </ul>
	        <% }) %>
	    </div>
	</main>
	<footer>
	    <% include ../partials/footer %>
	</footer>
</body>
</html>